<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apple"
            android:id="@+id/apple"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/apple_count"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/apple_price"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Strawberry"
            android:id="@+id/strawberry"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/strawberry_count"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/strawberry_price"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blueberry"
            android:id="@+id/blueberry"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/blueberry_count"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/blueberry_price"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Potatoes"
            android:id="@+id/potatoes"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/potatoes_count"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:id="@+id/potatoes_price"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="CALCULATE"
        android:id="@+id/calculate"
        android:layout_marginTop="20dp"
        android:onClick="onCalculate"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/result"
        android:layout_height="wrap_content"/>
</LinearLayout>